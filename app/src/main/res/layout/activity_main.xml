<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Флаг Австрии"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="150dp"
                    android:layout_height="33dp"
                    android:background="#dc143c" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="33dp"
                    android:background="#ffffff" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="33dp"
                    android:background="#dc143c" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Флаг Польши"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="#ffffff" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="#dc143c" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Флаг Италии"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="#00a859" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="#ffffff" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="#ed2939" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Флаг Колумбии"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="#FFFF00" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:background="#000080" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:background="#dc143c" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Флаг Мадагаскара"
                android:textColor="@color/white" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="#008000"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="#dc143c"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Флаг Тайданжа"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="150dp"
                    android:layout_height="16dp"
                    android:background="#8B0000" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="16dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="#00008B" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="16dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="16dp"
                    android:background="#8B0000" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Флаг Дании"
                android:textColor="@color/white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="#8B0000" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="45dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="45dp"
                    android:background="@color/white" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Флаг Швейцарии"
                android:textColor="@color/white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="#8B0000" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="150dp"
                    android:layout_height="100dp">

                    <View
                        android:id="@+id/view4"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="25dp"
                        android:layout_height="70dp"
                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </FrameLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>